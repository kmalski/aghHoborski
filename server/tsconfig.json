{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": false,
    "esModuleInterop": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build"]
}
