{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": false,
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
